---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>theodore nielsen</title>
  <link rel="alternate" type="text/html" href="http://theodorenielsen.com/" />
  <link rel="self" type="application/atom+xml" href="http://theodorenielsen.com/atom.xml" />
  <id>http://theodorenielsen.com/atom.xml</id>
  <updated>{{ site.time | date_to_utc | date:"%Y-%m-%dT%H:%M:%SZ" }}</updated>
  <subtitle>this blog was born under the sign of saturn</subtitle>

  {% for post in site.posts limit:15 %}
  
  <entry>
    <title>{{ post.title }}</title>
    <link rel='alternate' type='text/html' href='{{ post.url }}' />
    <id>{{ post.id }}</id>
    <updated>{{ post.date | date.getutc:"%Y-%m-%dT%H:%M:00Z" }}</updated>

    <author>
      <name>Theodore O. Nielsen</name>
      <uri>http://theodorenielsen.com/</uri>
      <email>ted@theodorenielsen.com</email>
    </author>

	{% unless post.summary == 'first' %}
    <summary><![CDATA[{{ post.summary | markdownify }}]]></summary>
    {% else %}
    <summary><![CDATA[{{ post.content | strip_html | truncatewords: 50 }}]]></summary>
    {% endunless %}
    <content type='html' xml:lang='en' xml:base='http://theodorenielsen.com/'>
      <![CDATA[{{ post.content }}]]>
    </content>
  </entry>
  {% endfor %}
</feed>